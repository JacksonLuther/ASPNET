@model IEnumerable<Product>
<style>
    .button-borders{
        border-radius: 3.75;
    }
</style>

<h1>Products</h1>
<div style="display: block">
    <button><a href="/Product/InsertProduct/">Create a New Product</a></button>
</div>
<table class="table table-bordered">
    <tr>
        <th>ProductID</th>
        <th>Name</th>
        <th>Price</th>
        <th>CategoryID</th>
        <th>OnSale</th>
        <th>StockLevel</th>
    </tr>
    @foreach (var product in Model)
    {
     <tr>
        <td><button class="button-borders"><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></button></td>
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td>@product.CategoryID</td>
        <td>@product.OnSale</td>
        <td>@product.StockLevel</td>
     </tr>
    }
</table>